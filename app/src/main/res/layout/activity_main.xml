<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <Button
            android:text="/"
            android:layout_width="56dp"
            android:layout_height="0dp"
            android:id="@+id/bt_divide" app:layout_constraintStart_toEndOf="@+id/bt_multiply"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/btn_result" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="213dp" android:layout_marginBottom="25dp"/>
    <Button
            android:text="*"
            android:layout_width="56dp"
            android:layout_height="35dp"
            android:id="@+id/bt_multiply" app:layout_constraintStart_toEndOf="@+id/bt9"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/bt_divide"
            app:layout_constraintTop_toBottomOf="@+id/bt_plus" app:layout_constraintBottom_toTopOf="@+id/btn_result"/>
    <Button
            android:text="-"
            android:layout_width="56dp"
            android:layout_height="35dp"
            android:id="@+id/bt_minus" app:layout_constraintStart_toEndOf="@+id/bt_plus"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/bt_clear" app:layout_constraintBottom_toTopOf="@+id/bt_divide"/>
    <Button
            android:text="+"
            android:layout_width="56dp"
            android:layout_height="35dp"
            android:id="@+id/bt_plus" app:layout_constraintStart_toEndOf="@+id/bt6"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/bt_minus"
            app:layout_constraintBaseline_toBaselineOf="@+id/bt6"/>
    <Button
            android:text="CLR"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:id="@+id/bt_clear"
            app:layout_constraintTop_toBottomOf="@+id/tv_monitor"
            app:layout_constraintBottom_toTopOf="@+id/bt_minus" app:layout_constraintStart_toEndOf="@+id/bt3"
            android:layout_marginEnd="25dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:text="="
            android:layout_width="121dp"
            android:layout_height="0dp"
            android:id="@+id/btn_result" app:layout_constraintStart_toEndOf="@+id/bt0"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toBottomOf="@+id/bt_divide"
            android:layout_marginBottom="194dp"/>
    <Button
            android:text="Del"
            android:layout_width="56dp"
            android:layout_height="35dp"
            android:id="@+id/bt_del" app:layout_constraintStart_toEndOf="@+id/bt3"
            app:layout_constraintHorizontal_bias="0.54" app:layout_constraintEnd_toStartOf="@+id/bt_clear"
            app:layout_constraintTop_toBottomOf="@+id/tv_monitor" app:layout_constraintBottom_toTopOf="@+id/bt_plus"
            app:layout_constraintVertical_bias="0.531"/>

    <TextView
            android:text=""
            android:layout_width="0dp"
            android:layout_height="0dp"

            android:id="@+id/tv_monitor" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/bt3" android:layout_marginTop="25dp"
            android:layout_marginBottom="16dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="29dp" android:layout_marginEnd="29dp"/>

    <Button
            android:text="1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/bt1" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/bt3"
            app:layout_constraintBottom_toTopOf="@+id/bt4" android:layout_marginTop="88dp"
            android:layout_marginBottom="20dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="24dp" android:layout_marginEnd="89dp"
    />

    <Button
            android:text="2"
            android:layout_width="42dp"
            android:layout_height="41dp"
            android:id="@+id/bt2" app:layout_constraintStart_toEndOf="@+id/bt1"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/bt3"
            app:layout_constraintTop_toBottomOf="@+id/tv_monitor" app:layout_constraintBottom_toTopOf="@+id/bt5"/>

    <Button
            android:text="3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/bt3"
            app:layout_constraintTop_toBottomOf="@+id/tv_monitor" app:layout_constraintStart_toEndOf="@+id/bt1"
            app:layout_constraintEnd_toStartOf="@+id/bt_clear" android:layout_marginBottom="24dp"
            app:layout_constraintBottom_toTopOf="@+id/bt5" android:layout_marginEnd="106dp"
    />

    <Button
            android:text="4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/bt4" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/bt6"
            app:layout_constraintTop_toBottomOf="@+id/bt1" android:layout_marginBottom="85dp"
            app:layout_constraintBottom_toTopOf="@+id/bt0"
            android:layout_marginStart="24dp" android:layout_marginEnd="89dp"/>

    <Button
            android:text="5"
            android:layout_width="42dp"
            android:layout_height="0dp"
            android:id="@+id/bt5" app:layout_constraintStart_toEndOf="@+id/bt4"
            app:layout_constraintHorizontal_bias="0.531" app:layout_constraintEnd_toStartOf="@+id/bt6"
            app:layout_constraintTop_toBottomOf="@+id/bt3" android:layout_marginBottom="22dp"
            app:layout_constraintBottom_toTopOf="@+id/bt9"/>

    <Button
            android:text="6"
            android:layout_width="0dp"
            android:layout_height="41dp"
            android:id="@+id/bt6" app:layout_constraintTop_toBottomOf="@+id/bt3"
            app:layout_constraintBottom_toTopOf="@+id/bt9" app:layout_constraintStart_toEndOf="@+id/bt4"
            android:layout_marginEnd="187dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintVertical_bias="0.608"/>

    <Button
            android:text="7"
            android:layout_width="42dp"
            android:layout_height="41dp"
            android:id="@+id/bt7" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/bt8"
            app:layout_constraintTop_toBottomOf="@+id/bt4" app:layout_constraintBottom_toTopOf="@+id/bt0"/>

    <Button
            android:text="8"
            android:layout_width="42dp"
            android:layout_height="41dp"
            android:id="@+id/bt8" app:layout_constraintStart_toEndOf="@+id/bt7"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/bt9"
            app:layout_constraintTop_toBottomOf="@+id/bt5" app:layout_constraintBottom_toTopOf="@+id/bt0"/>

    <Button
            android:text="9"
            android:layout_width="42dp"
            android:layout_height="0dp"
            android:id="@+id/bt9" app:layout_constraintStart_toEndOf="@+id/bt8"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/bt_multiply"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toBottomOf="@+id/bt5"
            android:layout_marginBottom="258dp"/>

    <Button
            android:text="0"
            android:layout_width="174dp"
            android:layout_height="0dp"
            android:id="@+id/bt0" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/btn_result"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toBottomOf="@+id/bt4"
            android:layout_marginBottom="196dp"/>


</android.support.constraint.ConstraintLayout>